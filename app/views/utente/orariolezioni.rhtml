	    <% for lab in @laboratori %>
        	<li><%= link_to "occupazione laboratori di "+ lab.tipolab,  :action=>'per_occupazione_aule', :pd => periododidattico.id, :laboratorio=>'S', :tipolab=>lab.tipolab  %></li>
   		<% end %>
   </ul><br>
<% end %>
</ol>
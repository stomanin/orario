   <ul>
   		<li><%= link_to 'per nome del corso', 			  		  :action=>'per_nomecorso', 	   :pd => periododidattico.id %></li>
   		<li><%= link_to 'per Corso di Laurea/Curriculum', 		  :action=>'per_curriculum',  	   :pd => periododidattico.id %></li>
